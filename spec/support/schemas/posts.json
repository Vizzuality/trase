{
  "definitions": {},
  "$schema": "http://json-schema.org/draft/schema##",
  "type": "object",
  "$id": "http://example.com/example.json",
  "additionalProperties": false,
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "type": "array",
      "$id": "/properties/data",
      "minItems": 1,
      "items": {
        "type": "object",
        "$id": "/properties/data/items",
        "additionalProperties": false,
        "required": [
          "title",
          "date",
          "imageUrl",
          "highlighted",
          "completePostUrl",
          "category"
        ],
        "properties": {
          "title": {
            "type": "string",
            "$id": "/properties/data/items/properties/title"
          },
          "date": {
            "type": "string",
            "$id": "/properties/data/items/properties/date"
          },
          "imageUrl": {
            "type": ["string", "null"],
            "$id": "/properties/data/items/properties/imageUrl"
          },
          "highlighted": {
            "type": "boolean",
            "$id": "/properties/data/items/properties/highlighted"
          },
          "completePostUrl": {
            "type": "string",
            "$id": "/properties/data/items/properties/completePostUrl"
          },
          "category": {
            "type": "string",
            "$id": "/properties/data/items/properties/category"
          }
        }
      }
    }
  }
}

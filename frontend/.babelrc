{
  "presets": [
    ["env", {
        "targets": {
          "browsers": ["> 1%", "last 2 versions", "Firefox ESR", "Safari >= 8"]
        }
    }],
    "react"
  ],
  "plugins": [
    "syntax-dynamic-import",
    "transform-object-rest-spread",
    "transform-exponentiation-operator"
  ],
  "env": {
    "test": {
      "presets": [
        "env",
        "react"
      ],
      "plugins": [
        "transform-object-rest-spread",
        "transform-exponentiation-operator",
        "transform-es2015-modules-commonjs",
        ["module-resolver", {
          "alias": {
            "actions": "./scripts/actions"
          }
        }]
      ]
    }
  }
}
